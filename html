<!DOCTYPE html>
<meta charset="utf-8">
<style>

.background {
  fill: none;
  pointer-events: all;
}

#Regions {
  fill: steelblue;
}

#Regions .active {
  fill: orange;
}

#region-borders {
  fill: none;
  stroke: #000;
  stroke-width: 10px;
  stroke-linejoin: round;
  stroke-linecap: round;
  pointer-events: none;
}

</style>
<body>
<script src="http://d3js.org/d3.v3.min.js"></script>
<script src="http://d3js.org/topojson.v1.min.js"></script>
<script>

var width = 350,
    height = 700,
    centered;

var projection = d3.geo.mercator()
    .center([-113, 53])
    .scale(1070)
    .translate([width/2, height/2]);

var path = d3.geo.path()
    .projection(projection);

var svg = d3.select("body").append("svg")
    .attr("width", width)
    .attr("height", height);

svg.append("rect")
    .attr("class", "background")
    .attr("width", width)
    .attr("height", height)
    .on("click", clicked);

var g = svg.append("g");

d3.json("test2.json", function(error, Alberta) {
  g.append("g")
      .attr("id", "Regions")
    .selectAll("path")
      .data(topojson.feature(Alberta, Alberta.objects.Regions).features)
    .enter()
    .append("path")
      .attr("d", path)
      .on("click", clicked);

    g.append("text")
      .attr("x", function (d) { return path.centroid(d)[0]; })
      .attr("y", function (d) { return path.centroid(d)[1]; })
      .attr("text-anchor","middle")
      .attr("color", "#000")
      .attr("font-size", "12px")
      .text(function (d) { return d.properties.LUF_NAME; });


  g.append("path")
      .datum(topojson.mesh(Alberta, Alberta.objects.Regions, function(a, b) { return a !== b; }))
      .attr("id", "region-borders")
      .attr("d", path);

});

function clicked(d) {
  var x, y, k;

  if (d && centered !== d) {
    var centroid = path.centroid(d);
    x = centroid[0];
    y = centroid[1];
    k = 2;
    centered = d;
  } else {
    x = width / 2;
    y = height / 2;
    k = 1;
    centered = null;
  }

  g.selectAll("path")
      .classed("active", centered && function(d) { return d === centered; });

  g.transition()
      .duration(750)
      .attr("transform", "translate(" + width / 2 + "," + height / 2 + ")scale(" + k + ")translate(" + -x + "," + -y + ")")
      .style("stroke-width", 10 / k + "px");
}

</script>
